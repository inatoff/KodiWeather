<Page
    x:Class="KodiWeather.CurrentWeatherPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KodiWeather"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:Name="CWImage" HorizontalAlignment="Left" Height="100" Margin="41,25,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="tbTemperature" HorizontalAlignment="Left" Margin="61,175,0,0" TextWrapping="Wrap" Text="Current temp" VerticalAlignment="Top" RenderTransformOrigin="-0.645,-0.25"/>
        <TextBlock x:Name="tbWindSpeed" HorizontalAlignment="Left" Margin="61,225,0,0" TextWrapping="Wrap" Text="Wspeed" VerticalAlignment="Top" RenderTransformOrigin="-0.645,-0.25"/>
        <TextBlock x:Name="tbRain" HorizontalAlignment="Left" Margin="61,270,0,0" TextWrapping="Wrap" Text="Rain" VerticalAlignment="Top" RenderTransformOrigin="-0.645,-0.25"/>

    </Grid>
</Page>
