<Page
    x:Class="KodiWeather.CurrentWeatherPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KodiWeather"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">
    <Page.Background>
        <ImageBrush x:Name="BakgroundBrush" Stretch="Fill"/>
    </Page.Background>

    <Grid x:Name="CurrentGrid">
        <Image x:Name="BackgroundImage"/>
        <Image x:Name="CWImage" HorizontalAlignment="Left" Height="100" Margin="61,35,0,0" VerticalAlignment="Top" Width="110"/>
        <TextBlock x:Name="tbTemperature" HorizontalAlignment="Left" Margin="61,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.645,-0.25" Text="Температура:"/>
        <TextBlock x:Name="tbWindSpeed" HorizontalAlignment="Left" Margin="61,225,0,0" TextWrapping="Wrap" Text="Скорость ветра:" VerticalAlignment="Top" RenderTransformOrigin="-0.645,-0.25"/>
        <TextBlock x:Name="tbRain" HorizontalAlignment="Left" Margin="61,270,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.645,-0.25">
            <Run Text="Осадки"/>
            <Run Text=":"/>
        </TextBlock>
    </Grid>
</Page>
